<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context="com.sb.wifistart.activities.MainScreenActivity">

    <Button
        android:id="@+id/newScan"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:backgroundTint="#187C13"
        android:gravity="center"
        android:text="Новое сканирование"
        android:textColor="#FFFFFF"
        android:textSize="12pt"
        app:layout_constraintBottom_toTopOf="@+id/myScans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/firstDivider"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00FFFFFF" />

    <Button
        android:id="@+id/myScans"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:backgroundTint="#187C13"
        android:text="Мои сканирования"
        android:textColor="#FFFFFF"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newScan" />

    <View
        android:id="@+id/secondDivider"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00FFFFFF" />

    <Button
        android:id="@+id/testConnect"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:backgroundTint="#187C13"
        android:text="Проверка скорости сети"
        android:textColor="#FFFFFF"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newScan" />

</LinearLayout>